      <div class="head">
        <h2>LATEST TRAILERS</h2>
        <p class="text-right"><a href="#">See all</a></p>
      </div>

      {% for movie in movies %}

        <div class="col-lg-4 col-md-12 mb-4">
          <div class="movie  {{ (loop.last) ? 'last' : '' }}">
            <div class="movie-image"> <span class="play"><span class="name">{{ movie.title }}</span></span> <a href="#"><img src="css/images/{{movie.title}}.jpg" alt="" /></a> </div>
